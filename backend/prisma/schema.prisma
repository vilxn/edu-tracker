generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id                Int      @id @default(autoincrement())
  name              String?
  email             String   @unique
  password          String
  role              String   @default("student")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  isVerified        Boolean  @default(false)
  verificationToken String?
}
